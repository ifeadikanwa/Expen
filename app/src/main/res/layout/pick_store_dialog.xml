<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pick_store_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/pick_a_store" />

    <Button
        android:id="@+id/kroger_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent=".38"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pick_store_title" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/kroger_logo"
        app:layout_constraintWidth_percent=".38"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/kroger_button"
        app:layout_constraintEnd_toEndOf="@+id/kroger_button"
        app:layout_constraintStart_toStartOf="@+id/kroger_button"
        app:layout_constraintTop_toTopOf="@+id/kroger_button" />
</androidx.constraintlayout.widget.ConstraintLayout>